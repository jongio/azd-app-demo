{
  "name": "demo-api",
  "version": "1.0.0",
  "description": "Demo API with intentional bug for AI debugging and testing demonstration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "test": "jest --coverage",
    "test:unit": "jest --coverage --testPathPattern=test",
    "test:integration": "jest --testPathPattern=integration"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageReporters": ["text", "cobertura", "html"],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ]
  }
}
